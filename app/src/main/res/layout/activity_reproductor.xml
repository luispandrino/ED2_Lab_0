<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reproductor"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="40dp"
        android:text="@string/ingrese_el_nombre_de_la_canci_n_que_desea_buscar"
        app:layout_constraintBottom_toTopOf="@+id/txtBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInicio"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="102dp"
        android:layout_height="44dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="256dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="256dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="18dp"
        android:text="@string/buscar"
        app:layout_constraintBottom_toTopOf="@+id/BtnAgregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBuscar" />

    <TextView
        android:id="@+id/lblInicio"
        android:layout_width="349dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/bienvenido_a_su_reproductor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lstPlay"
        android:layout_width="342dp"
        android:layout_height="240dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscar" />

    <Button
        android:id="@+id/BtnAgregar"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="244dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="244dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="8dp"
        android:text="@string/agregar"
        app:layout_constraintBottom_toTopOf="@+id/lstPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscar" />

    <RadioButton
        android:id="@+id/RbA"
        android:layout_width="129dp"
        android:layout_height="34dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="94dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="10dp"
        android:text="@string/ascendente"
        app:layout_constraintBottom_toTopOf="@+id/RbD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnAgregar"
        app:layout_constraintTop_toBottomOf="@+id/BtnOrdenar" />

    <RadioButton
        android:id="@+id/RbD"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="93dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="8dp"
        android:text="@string/descendente"
        app:layout_constraintBottom_toTopOf="@+id/lstPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnAgregar"
        app:layout_constraintTop_toBottomOf="@+id/RbA" />

    <Button
        android:id="@+id/BtnOrdenar"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="11dp"
        android:text="@string/ordenar"
        app:layout_constraintBottom_toTopOf="@+id/RbA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBuscar"
        app:layout_constraintTop_toBottomOf="@+id/txtBuscar" />

</android.support.constraint.ConstraintLayout>